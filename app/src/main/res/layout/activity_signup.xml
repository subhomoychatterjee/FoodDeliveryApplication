<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgro"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/justeat"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="100dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo1"
            android:layout_marginTop="130dp"
            android:contentDescription="@string/app_name"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
        <EditText
            android:id="@+id/edtxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text"
            android:layout_marginTop="250dp"
            android:textSize="40sp"
            android:hint="Phone Number"
            android:textAlignment="gravity"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/edtxt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text1"
            android:layout_marginTop="15dp"
            android:textSize="40sp"
            android:hint="Name"
            android:textStyle="italic"
            android:textAlignment="gravity"
            />
        <EditText
            android:id="@+id/edtxt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_text1"
            android:layout_marginTop="15dp"
            android:textSize="40sp"
            android:hint="Password"
            android:textStyle="italic"
            android:textAlignment="gravity"
            />
        <Button
            android:id="@+id/Signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:background="@drawable/rounded_button1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>


</RelativeLayout>
