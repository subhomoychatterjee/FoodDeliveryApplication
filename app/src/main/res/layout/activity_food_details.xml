<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food_detailsActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chicken_kabab"
            android:contentDescription="@null"
            />
    </LinearLayout>


    <LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
        android:layout_marginTop="450dp"
    android:layout_marginRight="8dp"

    >



<TextView

    android:id="@+id/txt3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="30sp"
    android:hint="Sikh Kabab   3Items "
    android:textColor="#000"
    android:textStyle="italic"
    android:textAlignment="gravity"
    android:editable="false"
    android:clickable="false"
    android:cursorVisible="false"
    android:focusable="false"
    android:focusableInTouchMode="false"

    />
        <TextView

            android:id="@+id/txt6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:hint="Delivery time : 45 min "
            android:textColor="#000"
            android:textStyle="italic"
            android:textAlignment="gravity"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />


        <TextView

            android:id="@+id/txt5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:hint="Saima Restaurant - Mughlai and North Indian"
            android:textColor="#000"
            android:textStyle="italic"
            android:textAlignment="gravity"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />


        <TextView

            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:hint="MRP : 120/-"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />










</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

    <Button
        android:layout_alignParentTop="true"
        android:id="@+id/Buynow"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:text="BUY now"
        android:background="@drawable/rounded_button"
        android:textSize="37sp"
        android:textStyle="bold"
        />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/cart"
            android:contentDescription="@null"
            android:layout_marginLeft="90dp"
            />



    </LinearLayout>

</RelativeLayout>